{
  "name": "pokerpal",
  "version": "1.0.0",
  "description": "A web-based poker tracking application with computer vision chip detection",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:prod && npm run start:server",
    "start:server": "cd server && npm start",
    "dev": "npm run build:dev && npm run dev:server",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:prod",
    "build:dev": "node build.config.js development",
    "build:prod": "node build.config.js production",
    "build:test": "node build.config.js test",
    "setup": "npm install && cd server && npm install",
    "setup:db": "cd server && npm run init-db",
    "reset:db": "cd server && npm run reset-db",
    "seed:db": "cd server && npm run seed-db",
    "test": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "test:backend": "jest --config jest.config.js",
    "test:frontend": "karma start karma.conf.js --single-run",
    "test:e2e": "node test/e2e/run-e2e-tests.js full",
    "test:e2e:smoke": "node test/e2e/run-e2e-tests.js smoke",
    "test:e2e:auth": "node test/e2e/run-e2e-tests.js auth",
    "test:e2e:profile": "node test/e2e/run-e2e-tests.js profile",
    "test:e2e:session": "node test/e2e/run-e2e-tests.js session",
    "test:e2e:leaderboard": "node test/e2e/run-e2e-tests.js leaderboard",
    "test:e2e:admin": "node test/e2e/run-e2e-tests.js admin",
    "test:e2e:protractor": "protractor protractor.conf.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "webdriver:update": "webdriver-manager update",
    "webdriver:start": "webdriver-manager start",
    "pretest:e2e": "npm run webdriver:update"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "karma": "^6.4.2",
    "karma-jasmine": "^5.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "jasmine-core": "^5.1.1",
    "angular-mocks": "^1.8.3",
    "@types/jasmine": "^5.1.4",
    "protractor": "^7.0.0",
    "webdriver-manager": "^12.1.8",
    "fs-extra": "^11.1.1"
  },
  "keywords": ["poker", "tracking", "angularjs", "computer-vision"],
  "author": "PokerPal Team",
  "license": "MIT"
}